#!/bin/bash
# Pre-commit hook for Rust projects
# Runs cargo fmt and cargo clippy on staged files

set -e

echo "ğŸ” Running pre-commit checks..."

# Get list of staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -z "$STAGED_RS_FILES" ]; then
    echo "âœ… No Rust files staged, skipping checks"
    exit 0
fi

echo "ğŸ“ Staged Rust files:"
echo "$STAGED_RS_FILES" | sed 's/^/  - /'
echo

# 1. Run cargo fmt --check
echo "ğŸ¨ Checking code formatting with cargo fmt..."
if ! cargo fmt --all -- --check; then
    echo
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting issues"
    exit 1
fi
echo "âœ… Formatting check passed"
echo

# 2. Run cargo clippy
echo "ğŸ“ Running clippy checks..."
if ! cargo clippy --all-targets -- -D warnings; then
    echo
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Run 'cargo clippy --fix --allow-dirty' to fix automatically"
    echo "ğŸ’¡ Or run 'cargo clippy --all-targets -- -D warnings' to see all issues"
    exit 1
fi
echo "âœ… Clippy checks passed"
echo

# 3. Quick compile check on staged files
echo "ğŸ”¨ Quick compile check..."
if ! cargo check --all-targets; then
    echo
    echo "âŒ Compile check failed!"
    echo "ğŸ’¡ Fix compilation errors before committing"
    exit 1
fi
echo "âœ… Compile check passed"
echo

echo "âœ¨ All pre-commit checks passed!"
exit 0
